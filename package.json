{
  "name": "sistema-parqueadero",
  "version": "1.0.0",
  "description": "Sistema de control de parqueadero",
  "main": "main.js",
  "author": "Wilmar Clavijo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "electron": "electron .",
    "dist": "ng build --configuration production && electron-builder",
    "pack": "ng build --configuration production && electron-builder --dir",
    "package": "ng build --configuration production && electron-builder --win",
    "dev": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron .\""
  },
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/fire": "^17.1.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "firebase": "^10.14.1",
    "html2canvas": "^1.4.1",
    "jsbarcode": "^3.12.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/cli": "^17.3.17",
    "@angular/compiler-cli": "^17.3.0",
    "@types/node": "^18.18.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "~5.4.2"
  },
  "build": {
    "appId": "com.wilmar.parqueadero",
    "productName": "Sistema Parqueadero",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/sistema-parqueadero/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
